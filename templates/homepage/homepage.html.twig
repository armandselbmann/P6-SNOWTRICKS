{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}

    <div class="container-fluid p-0 position-relative">
        <div class="alert alert-dismissible alert-light position-absolute top-50 start-50 translate-middle" style="opacity: 0.6; width: 350px; height:70px">
        </div>
        <h2 class="text-center text-dark position-absolute top-50 start-50 translate-middle">Partage tes figures !</h2>
        <img src="../images/img_home.jpg" class="img-fluid" alt="Image d'accueil" />
        <div class="row position-absolute bottom-0 end-0 pe-2 p-0 m-0">
            <div class="col">
                <a href="#tricks" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-caret-down-square-fill" viewBox="0 0 16 16">
                        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6H4z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <div class="container position-relative">
        <h1 class="text-center mt-3 mb-3" id="tricks">Figures</h1>
        <div class="row row-cols-1 row-cols-lg-3 row-cols-xl-4 g-4">

            {{include ('trick/index.html.Twig')}}

        </div>
    </div>

    {% if totalAllTricks > totalDisplayTricks %}
        <div class="text-center">
            <button class="btn btn-info load-more" type="button">Afficher plus de figures</button>
            <input type="hidden" id="totalDisplayTricks" value="{{ totalDisplayTricks }}">
            <input type="hidden" id="totalAllTricks" value="{{ totalAllTricks }}">
            <input type="hidden" id="tricksPerLoading" value="{{ tricksPerLoading }}">
        </div>
    {% endif %}

    <div class="container-fluid position-relative">
        <div class="row position-absolute bottom-0 end-0 pe-2 p-0 m-0">
            <div class="col" id="arrow-top" style="display: none">
                <a href="#tricks" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-caret-up-square-fill" viewBox="0 0 16 16">
                        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm4 9h8a.5.5 0 0 0 .374-.832l-4-4.5a.5.5 0 0 0-.748 0l-4 4.5A.5.5 0 0 0 4 11z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{parent() }}
    <script src="{{ asset('js/loadMore.js') }}"></script>
{% endblock %}