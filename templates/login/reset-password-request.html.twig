{% extends 'base.html.twig' %}
{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

    <!-- Forgot password form -->
    <div class="container vh-85">
        <div class="row justify-content-center">
            <div class="col-8">
                <h1 class="mt-3 mb-5 text-center">Mot de passe oublié</h1>
                <div class="card p-3">
                    {{ form_start(requestPassForm) }}
                        <div class="mb-3 d-grid col-8 mx-auto text-center">
                                {{ form_row(requestPassForm.username) }}
                        </div>
                        <div class="d-grid col-6 mx-auto">
                            <button type="submit" class="btn btn-primary">Demande de réinitialisation du mot de passe</button>
                        </div>
                    {{ form_end(requestPassForm) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
